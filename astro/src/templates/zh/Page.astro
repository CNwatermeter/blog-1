---
export interface Props {
  title: string;
  bar_index: number;
}

const { title, bar_index } = Astro.props;
import Base from "./Base.astro";
import Bar from "./Bar.astro";
import Logo from "@components/logo.astro";
---

<Base title={title + "新世界的大门"}>
  <div class="center">
    <Logo />
  </div>
  <Bar index={bar_index} />
  <main>
    <slot />
  </main>
</Base>

<style>
  .center {
    text-align: center;
  }
  main {
    max-width: 1024px;
    margin: 8px;
  }
</style>
