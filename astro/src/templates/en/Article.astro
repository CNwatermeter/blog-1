---
import Page from "../zh/Page.astro";
import Noscript from "@components/boxes/Noscript.astro";
const title = Astro.props.frontmatter.title;
const noscript = Astro.props.frontmatter.noscript;
---

<Page title={title}>
  <article class="paper" lang="en">
    <slot />
  </article>
  <footer>
    {noscript && <Noscript />}
    <div>
      Powered by <a href="https://mdxjs.com/">MDX</a> /
      Generated by <a href="https://astro.build/">Astro</a> /
      Hosted by <a href="https://github.com/OverflowCat/blog/tree/src/astro">GitHub</a>
    </div>
    新世界的大門 2023
  </footer>
</Page>

<style>
  article {
    font-family: "Noto Sans", Tahoma, sans-serif;
    font-size: 120%;
    text-align: left;
    max-width: 1024px;
    margin: auto;
    padding-left: 32px;
    padding-right: 28px;
    padding-top: 12px;
    padding-bottom: 12px;
    line-height: 200%;
  }
  .paper {
    background: var(--content-bg-color);
    border-radius: initial;
    box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.12),
      0 3px 1px -2px rgba(0, 0, 0, 0.06), 0 1px 5px 0 rgba(0, 0, 0, 0.12),
      0 -1px 0.5px 0 rgba(0, 0, 0, 0.09);
    box-sizing: border-box;
    /* color: var(--text-color); */
    max-height: calc(100vh - 24px);
  }
  footer {
    margin-top: 32px;
    margin-bottom: 32px;
  }
</style>
